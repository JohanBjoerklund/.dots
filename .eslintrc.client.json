{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [ "eslint:recommended" ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "array-bracket-spacing": [
      "warn",
      "always"
    ],
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "max-len": [
      "warn",
      {
        "code": 80,
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreStrings": true
      }
    ]
  }
}

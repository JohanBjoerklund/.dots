{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "react-app"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "array-bracket-spacing": [
      "warn",
      "always"
    ],
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "max-len": [
      "warn",
      {
        "code": 80,
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreStrings": true
      }
    ],
    "react/jsx-curly-spacing": [
      "warn",
      {
        "when": "always",
        "children": true
      }
    ],
    "react/jsx-closing-bracket-location": [
      "warn",
      "tag-aligned"
    ],
    "react/jsx-tag-spacing": ["warn", { "beforeSelfClosing": "always" }],
    "react/jsx-indent": [ "error", 2, { "checkAttributes": true, "indentLogicalExpressions": true } ]
  }
}
